{{!
    @template mod_openai_chat/report_page

    This template renders the report page form

    Example context (json):
    {
        "id": int, the ID of the course module
        "link": string, the URL for the form action
        "user": string, the value of the user field
        "starttime": string, the value of the starttime field
        "endtime": string, the value of the endtime field
    }
}}

<form class='mod_openai_chat' method='GET' action='{{link}}'>
    <input type='hidden' name='id' value='{{id}}' />
    <div class='report_container'>
        <div style='display: flex; flex-direction: column'>
            <label for='user'>{{#str}}searchbyusername, mod_openai_chat{{/str}}</label>
            <input name='user' type='text' value='{{user}}' placeholder='{{#str}}username, mod_openai_chat{{/str}}'/>
        </div>
        <div style='display: flex; flex-direction: column'>
            <label for='starttime'>{{#str}}starttime, mod_openai_chat{{/str}}</label>
            <input type='datetime-local' name='starttime' value='{{starttime}}' />
        </div>
        <div style='display: flex; flex-direction: column'>
            <label for='endtime'>{{#str}}endtime, mod_openai_chat{{/str}}</label>
            <input type='datetime-local' name='endtime' value='{{endtime}}' />
        </div>
    </div>
    <button class='btn btn-primary' type='submit'>{{#str}}search{{/str}}</button>
</form>
<br />