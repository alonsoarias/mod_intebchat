{{!
    @template mod_intebchat/adminreport_page

    This template renders the admin report page form

    Example context (json):
    {
        "courseid": int, the selected course ID
        "courses": array, list of courses
        "link": string, the URL for the form action
        "user": string, the value of the user field
        "starttime": string, the value of the starttime field
        "endtime": string, the value of the endtime field
    }
}}

<form class='mod_intebchat' method='GET' action='{{link}}'>
    <div class='report_container'>
        <div style='display: flex; flex-direction: column'>
            <label for='courseid'>{{#str}}course{{/str}}</label>
            <select name='courseid' class='form-control'>
                {{#courses}}
                    <option value='{{@key}}' {{#selected}}selected{{/selected}}>{{.}}</option>
                {{/courses}}
            </select>
        </div>
        <div style='display: flex; flex-direction: column'>
            <label for='user'>{{#str}}searchbyusername, mod_intebchat{{/str}}</label>
            <input name='user' type='text' value='{{user}}' placeholder='{{#str}}username, mod_intebchat{{/str}}'/>
        </div>
        <div style='display: flex; flex-direction: column'>
            <label for='starttime'>{{#str}}starttime, mod_intebchat{{/str}}</label>
            <input type='datetime-local' name='starttime' value='{{starttime}}' />
        </div>
        <div style='display: flex; flex-direction: column'>
            <label for='endtime'>{{#str}}endtime, mod_intebchat{{/str}}</label>
            <input type='datetime-local' name='endtime' value='{{endtime}}' />
        </div>
    </div>
    <button class='btn btn-primary' type='submit'>{{#str}}search{{/str}}</button>
</form>
<br />